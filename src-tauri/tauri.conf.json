{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Stockcito",
  "version": "0.1.0",
  "identifier": "com.stockcito.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build && npm run export"
  },
  "app": {
    "windows": [
      {
        "title": "Stockcito - POS & Inventario",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "appId": "com.stockcito.app",
      "category": "Office"
    }
  }
}
