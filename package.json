{
  "name": "stockcito",
  "version": "0.1.7",
  "private": true,
  "description": "Sistema POS e Inventario para peque√±os negocios - Con planes Free y Premium",
  "author": "Stockcito Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbo",
    "dev:webpack": "next dev",
    "build": "next build",
    "build:webpack": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:push:local": "dotenv -e .env.local -- prisma db push",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "postinstall": "npx prisma generate",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --linux --config electron-builder.json",
    "electron:build:appimage": "npm run build && electron-builder --linux AppImage --config electron-builder.json",
    "electron:build:deb": "npm run build && electron-builder --linux deb --config electron-builder.json",
    "electron:build:win": "powershell -ExecutionPolicy Bypass -File scripts/build-win-prod.ps1",
    "electron:release:win": "powershell -ExecutionPolicy Bypass -File scripts/build-win-prod.ps1 -Publish"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
